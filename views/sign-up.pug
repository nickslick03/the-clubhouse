extends layout

block head
    link(rel="stylesheet" href="/css/form.css")

block content
    h2 Sign Up
    form(method="post")
        label(for="firstname") First Name: 
        input(type="text" name="firstname" id="firstname" maxlength="20" required value=(locals.user ? user.firstName : ''))
        label(for="lastname") Last Name: 
        input(type="text" name="lastname" id="lastname" maxlength="20" required value=(user ? user.lastName : ''))
        label(for="email") Email: 
        input(type="email" name="email" id="email" maxlength="40" required value=(user ? user.email : ''))
        label(for="password") Password: 
        input(type="password" name="password" minlength="8" id="password" value=(user ? user.password : '') required)
        button(type="submit") Submit
    if errors 
        ul 
            each err in errors 
                li=err.msg