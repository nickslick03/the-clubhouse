extends layout 

block head
    link(rel="stylesheet" href="/css/form.css")

block content 
    h2 Join Club
    if user
        if !user.isMember
            p Enter the secret passcode to join the club! 
            form(method="post")
                label(for="password") Passcode:
                input(type="password" name="password" id="password")
                button(type="submit") Submit
        else
            p You're already a member!
    else 
        p You need to #[a(href="/sign-up") sign up] and then #[a(href="/login") login] to be able to join the club.
    if errors 
        ul 
            each err in errors 
                li=err.msg
